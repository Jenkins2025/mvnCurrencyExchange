pipeline {
    // agent any
    agent {any {image 'maven:3.6.3'}}

    stages{
        
        stage ('Build') {
            steps {
                sh 'mvn --version'
                echo "Build"
            }
        }

       stage ('Test') {
            steps {
                echo "Test"
                echo "Integrated Test"
            }
        }

        stage ('Integrated Test') {
            steps {
                echo "Integrated Test"
            }

        }
    }
    post {
            always {
                echo 'Im awesome.I rum alwys'
            }
            success {
                echo 'I run whenever you are successfule Eghosa'
            }
            failure {
                echo 'Im absent whenever you fail your exam'
            }
        }


}